@using Duftfinder.Domain.Dtos
@using Duftfinder.Resources
@using Duftfinder.Web.Controllers
@using Duftfinder.Web.Models
@model SearchEssentialOilViewModel

<div id="search-essential-oil-container">
    <h2>@Resources.SearchEssentialOil_SearchEssentialOil</h2>
    <div class="margin-top-big margin-bottom">
        <label>@Resources.SearchEssentialOil_SearchEssentialOilDescription</label>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "search-essential-oil-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group col-md-12">
                <label class="control-label col-md-2">@Resources.SearchEssentialOil_EssentialOil</label>
                <div id="search-essential-oil-text-container" class="col-md-6">
                    @Html.TextBoxFor(model => model.SearchEssentialOilText, new { id = "search-essential-oil-text", @class = "form-control", autocomplete = "off" })
                    <input id="clear-search" type="button" class="btn btn-secondary clear-search-inputs" value="X">
                </div>
                <div id="search-essential-oil-button-container" class="col-md-2">
                    <input id="search-essential-oil-button" type="submit" value="@Resources.Action_Search" class="btn btn-primary" />
                </div>
            </div>
            <div class="form-group col-md-4">
                <input id="reset-search-essential-oil-button" type="button" value="@Resources.Action_ResetSearch" class="btn btn-secondary"/>
            </div>
        </div>
    }
</div>
    
@* Placehoder for PartialView _EssentialOilSearchResults. Html is set in SearchEssentialOil.js -> showEssentialOilSearchResults()
   Loader is also displayed there. *@
<div id="essential-oil-search-results-container" class="margin-top-big"></div>
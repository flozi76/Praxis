@using Duftfinder.Resources
@using Duftfinder.Web.Controllers
@model string

@{ var disabled = string.IsNullOrEmpty(Model) ? "disabled" : ""; }
<div id="subnavigation">
    <div class="navbar">
        <div class="container">
            <div class="navbar-header">
                @* Show "Create" or "Edit" *@
                @if (string.IsNullOrEmpty(Model))
                {
                    @Html.ActionLink(Resources.Effect_Create, nameof(EffectController.CreateOrEdit), new {id = Model}, new {id = "create-or-edit-subnavigation-item", @class = "navbar-brand"})
                }
                else
                {
                    @Html.ActionLink(Resources.Effect_Edit, nameof(EffectController.CreateOrEdit), new {id = Model}, new {id = "create-or-edit-subnavigation-item", @class = "navbar-brand " + disabled})
                }
                @Html.ActionLink(Resources.Effect_AssignMolecule, nameof(EffectController.AssignMolecule), new {id = Model}, new {id = "assign-molecule-subnavigation-item", @class = "navbar-brand " + disabled})
                @Html.ActionLink(Resources.Effect_AssignEssentialOil, nameof(EffectController.AssignEssentialOil), new {id = Model}, new {id = "assign-essential-oil-subnavigation-item", @class = "navbar-brand " + disabled})
            </div>
        </div>
    </div>
</div>
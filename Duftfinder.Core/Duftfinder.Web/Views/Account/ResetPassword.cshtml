@using Duftfinder.Resources
@using Duftfinder.Web.Controllers
@model Duftfinder.Web.Models.ResetPasswordViewModel

@{
    ViewBag.Title = nameof(AccountController.ResetPassword);
}

<div id="reset-password" class="duftfinder-content">
    <h2>@Resources.Account_ChangePassword</h2>

    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal margin-top">
            <div class="form-group">
                <label class="control-label col-md-2">@Resources.Account_Email</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">@Resources.Account_Password</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Password, new {type = "password", @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">@Resources.Account_PasswordConfirmation</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Password2, new {type = "password", @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Password2, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Resources.Action_Save" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@

    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation/dist/additional-methods.js"></script>

}